<!DOCTYPE html>
<html>
    <head>
        <title>Agile Event Manager</title>
		<script src="/js/dependencies/jquery-2.1.4.js"></script>
		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="styles/signup.css">
		<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600' rel='stylesheet' type='text/css'>
		<link href="//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.css" rel="stylesheet">
		<script src="/js/homepage/homepage.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
	</head>
    <body>
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				<div>	
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
				</div>
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav navbar-right">
						<li>
							<div class="inputbox">
								<input class="input" type="text" name="email" id="username" placeholder="Email" required/>
							</div>
						</li>
						<li>
							<div class="inputbox">
								<input class="input" type="password" name="password" id="password" placeholder="Password" required/>
							</div>	
						</li>
						<li>
							<div id="signinbox" class="page-scroll">
								<button type="button" class="btn btn-default" id="signin">Sign In</button>
								<!--div id="signin" >Sign In</div-->
							</div>
						</li>
						<li>
							<div id="signupbox" class="page-scroll">
								<button type="button" class="btn btn-default" id="signup" data-toggle="modal" data-target="#myModal">Sign Up</button>
								<!--div id="signup" data-toggle="modal" data-target="#myModal">Sign Up</div-->
							
							</div>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<header>
			<div class="container">
				<div class="intro-text">
					<div class="intro-heading">Are you ready to volunteer?</div>
				</div>
			</div>
		</header>

		<!-- Modal -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							<h4 class="modal-title" id="myModalLabel">Registration</h1>
						</div>
						<div class="modal-body">
							<form id="sign-up-form">
								<div class="accounttype">
									<input type="radio" value="Personal" id="radioOne" name="account" checked/>
									<label for="radioOne" class="radio" chec>Personal</label>
									<input type="radio" value="Organization" id="radioTwo" name="account" />
									<label for="radioTwo" class="radio">Organization</label>
								</div>
								<div class="form-group">
									<label id="icon" for="name">
										<span class="glyphicon glyphicon-envelope"></span></label>
										<input type="text" name="email" id="name" placeholder="Email" required/>
								</div>
								<div class="form-group">
									<label id="icon" for="name">
											<span class="glyphicon glyphicon-user"></span>
									</label>
									<input type="text" name="name" id="name" placeholder="Name" required/>
								</div>
								<div class="form-group">
									<label id="icon" for="name">
											<span class="glyphicon glyphicon-lock"></span>
									</label>
									<input type="password" name="password" id="name" placeholder="Password" required/>
								</div>
								</form>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
								<button id="register-button" type="button" data-dismiss="modal" class="btn btn-primary">Register</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>

